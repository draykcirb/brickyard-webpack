{
  "name": "brickyard-webpack",
  "author": "",
  "version": "1.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:draykcirb/brickyard-webpack.git"
  },
  "main": "index.js",
  "dependencies": {
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.11.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.5.0",
    "eslint-loader": "^1.5.0",
    "exports-loader": "^0.6.3",
    "expose-loader": "^0.7.0",
    "file-loader": "^0.9.0",
    "glob": "^7.0.3",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.22.0",
    "imports-loader": "^0.6.5",
    "lodash": "^4.16.0",
    "log4js": "^0.6.33",
    "node-sass": "^3.10.0",
    "postcss-loader": "^0.13.0",
    "postcss-normalize-charset": "^1.1.0",
    "postcss-reporter": "^1.4.1",
    "progress-bar-webpack-plugin": "^1.9.0",
    "resolve-url-loader": "^1.6.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.0",
    "stylelint": "^7.3.0",
    "webpack": "^1.13.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint-config-airbnb-base": "^7.0.0",
    "eslint-plugin-import": "^1.15.0",
    "ghooks": "^1.3.1",
    "mocha": "^3.0.2",
    "standard-version": "^2.4.0",
    "validate-commit-msg": "^2.8.0"
  },
  "peerDependencies": {
    "brickyard3": "^2.0.0"
  },
  "scripts": {
    "lint": "eslint *.js",
    "test": "echo 'no test!\n'",
    "prerelease": "npm run lint",
    "release": "standard-version",
    "push": "git push --follow-tags && npm publish . --registry=https://registry.npmjs.org/"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "perf",
        "docs",
        "style",
        "refactor",
        "example",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "\n# allowed type: feat, fix, perf, docs, style, refactor, example, test, chore, revert\n# subject no more than 50 chars\n# a body line no more than 72 chars"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg",
      "post-commit": "git log -1 HEAD",
      "post-checkout": "npm install",
      "post-merge": "npm install"
    }
  }
}
